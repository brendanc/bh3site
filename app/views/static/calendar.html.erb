<div>
  <div>
    <div>
      <div class="centered">
        <h4>
          <%= ("Interested in haring a trail or being bag car*? Email the Boston H3 Hare Raisers at: #{mail_to "bostonh3hareraiser@gmail.com"}").html_safe %>
        </h4>
        <p>*Without bag car, there is no beer! Return the favor and volunteer!</p>
      </div>
      <script>
        
        $(document).ready(function() {
          var calApiKey = '<%= @api_key %>';
          var calId = 'bostonhash@gmail.com';
          $('#calendar').fullCalendar({
            events: {
              googleCalendarApiKey: calApiKey,
              googleCalendarId: calId
            },
          defaultView: 'month',
            eventClick: function(calEvent, jsEvent, view) {
              if (calEvent.url) {
                window.open(calEvent.url);
                return false;
              }
            }
          });

          $('#mobile-calendar').fullCalendar({
            events: {
              googleCalendarApiKey: calApiKey,
              googleCalendarId: calId
          },
          defaultView: 'basicWeek',
            eventClick: function(calEvent, jsEvent, view) {
              if (calEvent.url) {
                window.open(calEvent.url);
                return false;
              }
            }
          });
        });

      </script>
      <div class="hidden-xs" id="calendar"></div>
      <div class="visible-xs" id="mobile-calendar"></div>
    </div>
  </div>
</div>
